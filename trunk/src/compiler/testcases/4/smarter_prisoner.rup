// A slightly smarter prisoner -- looks at what happened last time

participant name "Smarter Prisoner";

def required step() {
    if ($global.last_outcome == -1)
       cooperate();
    if ($global.last_outcome == 2) // we both coopeated
       cooperate();
    if ($global.last_outcome == 1)
       defect();
    if ($global.last_outcome == 0)
       if ($randi % 4 != 0)
       	  defect();
       else
	  cooperate();
}